{
  "name": "backend",
  "projectType": "application",
  "sourceRoot": "backend/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nest build -b swc",
        "cwd": "backend"
      },
      "configurations": {
        "production": {
          "command": "nest build --webpack=false -b swc",
          "cwd": "backend"
        }
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nest start -b swc",
        "cwd": "backend"
      }
    },
    "start:dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nest start --watch -b swc",
        "cwd": "backend"
      }
    },
    "start:debug": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nest start --debug --watch -b swc",
        "cwd": "backend"
      }
    },
    "start:prod": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node dist/main",
        "cwd": "backend"
      },
      "dependsOn": ["build"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest",
        "cwd": "backend"
      }
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest --watch",
        "cwd": "backend"
      }
    },
    "test:cov": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest --coverage",
        "cwd": "backend"
      }
    },
    "test:e2e": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest --config ./test/jest-e2e.json",
        "cwd": "backend"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint \"{src,test}/**/*.ts\" --fix",
        "cwd": "backend"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "cwd": "backend"
      }
    }
  },
  "tags": ["scope:backend", "type:app"]
}
